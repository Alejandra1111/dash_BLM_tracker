
# follow instructions here
# https://linuxdady.com/mount-s3-bucket-with-ec2-instance/

sudo apt-get clean
sudo apt-get update

sudo apt-get install automake autotools-dev fuse g++ git libcurl4-openssl-dev libfuse-dev libssl-dev libxml2-dev make pkg-config
sudo apt-get install s3fs


sudo git clone https://github.com/s3fs-fuse/s3fs-fuse.git
cd s3fs-fuse
sudo ./autogen.sh           
sudo ./configure          
sudo make   
sudo make install 


	
sudo touch /etc/passwd-s3fs
sudo vim /etc/passwd-s3fs  
# your-access-key:your-secret-Key

sudo chmod 600 /etc/passwd-s3fs

sudo vim  /etc/fuse.conf 
#  Uncomment  the last line user_allow_other



sudo mkdir /mounted
sudo s3fs kotasstorage1 /mounted  -o allow_other -o uid=1001 -o mp_umask=002
df -h
